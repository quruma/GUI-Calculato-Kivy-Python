<Desktop>:
    orientation:'vertical'
    history_label:history_label
    label_output:label_output
    clean_history_btn:clean_history_btn
    BoxLayout:
        orientation:'vertical'
        Label:
            id:history_label
            pos_hint:{'center':1}
            text_size:self.size
            size_hint:1,.7
            opacity:0
            disabled:True
        Button:
            id:clean_history_btn
            size_hint:1,.1
            pos_hint:{'top':1}

            text:'Clean history'
            opacity:0
            disabled:True
            on_press:root.clean_history()
            
        Label:
            id:label_output
            text:'0'
            font_size:40
            halign: 'right'
            text_size:self.size
            size_hint:.95,1
            color: .16,.63,.86,1
        

    Widget:
        size_hint:1,.1
    BoxLayout:
        orientation:'vertical'
        
        GridLayout:
            size_hint:1,.2
            cols:2
            rows:1
            padding:2
            spacing:1
            Button:
                text:'History'
                on_press:root.btn_history(self)

        GridLayout:
            cols:4
            padding:2
            spacing:1
            Button:
                text:'C'
                background_color: 1,0,0, 1
                on_press:root.btn_clear_all()
            Button:
                text:'DEL'
                background_color: 1,0,0, 1
                on_press:root.btn_backspace()
            Button:
                text:'.'
                on_press: root.btn_add_symbol(self)
            Button:
                text:'/'
                background_color:  .15, .62, .85, 1
                background_normal:''
                on_press:root.btn_add_symbol(self)
            
            Button:
                text:'7'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'8'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'9'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'x'
                background_color:  .15, .62, .85, 1
                background_normal:''
                on_press:root.btn_add_symbol(self)
            Button:
                text:'4'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'5'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'6'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'-'
                on_press:root.btn_add_symbol(self)
                background_color:  .15, .62, .85, 1
                background_normal:''
            Button:
                text:'1'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'2'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'3'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'+'
                background_color:  .15, .62, .85, 1
                background_normal:''
                on_press:root.btn_add_symbol(self)
            
            Button:
                text:'('
                on_press:root.btn_add_symbol(self)
            Button:
                text:'0'
                on_press:root.btn_add_symbol(self)
            Button:
                text:')'
                on_press:root.btn_add_symbol(self)
            Button:
                text:'='
                background_color: .15,.34,.85,1
                background_normal:''
                on_press:root.btn_equal()

               


